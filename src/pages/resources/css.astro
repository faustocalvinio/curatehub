---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import CategoryTitle from '../../components/CategoryTitle.astro';
import PageCatList from '../../components/PageCatList.astro';

const cssItems = await Astro.glob('../../content/css/*.md')
---

<Layout title="CSS Resources">
    <main>
        <CategoryTitle title="CSS Resources" />``        
            <PageCatList>
                {cssItems.map(item=>(
                    <Card 
                        title={item.frontmatter.title}
                        description={item.frontmatter.description}
                        link={item.frontmatter.link}
                        image={ item.frontmatter.imageURL!== undefined ? item.frontmatter.imageURL : 'https://res.cloudinary.com/dc6mrv5cb/image/upload/v1697022104/personal-resources/html/html-css-js.com_html_generator__octr4j.png' }
                    />
                ))}
            </PageCatList>            
    </main>
</Layout>