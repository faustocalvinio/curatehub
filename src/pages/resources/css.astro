---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
const cssItems = await Astro.glob('../../content/css/*.md')
console.log(cssItems)
---

<Layout title="CSS Resources">
    <main>
        <h1 class="mt-7 text-black text-center font-extrabold text-5xl dark:text-white ">css page</h1>
        <ul class="grid grid-cols-[repeat(auto-fit,minmax(400px,1fr));] gap-2 my-10"> 
            {cssItems.map(item=>(
                <Card 
                    title={item.frontmatter.title}
                    description={item.frontmatter.description}
                />
            ))}
        </ul>
    </main>
</Layout>

