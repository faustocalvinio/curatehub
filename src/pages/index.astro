---
import favicon from '../assets/favicon.png';

import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import CategoryCard from '../components/CategoryCard.astro';
import htmlSvg from '../assets/svg/html.svg';
import cssSvg from '../assets/svg/css.svg'
import reactSvg from '../assets/svg/react.svg';
import ideasSvg from '../assets/svg/ideas.svg';
import jsSvg from '../assets/svg/js.svg'
import imgSvg from '../assets/svg/image.svg';
import interviewSvg from '../assets/svg/mic.svg';
import uiSvg from '../assets/svg/ui.svg';
import apiSvg from '../assets/svg/api.svg';
import toolsSvg from '../assets/svg/tools.svg';
const resourcesCategories = [
	{
	name: 'HTML',
	link:'/resources/html',
	image: htmlSvg.src
	},
	{
	name: 'CSS',
	link:'/resources/css',
	image: cssSvg.src
	},
	{
	name: 'UI',
	link:'/resources/ui',
	image: uiSvg.src
	},
	{
	name: 'React',
	link:'/resources/react',
	image: reactSvg.src
	},
	{
	name: 'APIs',
	link:'/resources/api',
	image: apiSvg.src
	},
	{
	name: 'Ideas',
	link:'/resources/ideas',
	image: ideasSvg.src
	},
	{
	name: 'Coding Tools',
	link:'/resources/code-tools',
	image: toolsSvg.src
	},
	{
	name: 'JavaScript',
	link:'/resources/javascript',
	image: jsSvg.src
	},
	{
	name: 'Images Resources',
	link:'/resources/images-res',
	image: imgSvg.src
	},
	{
	name: 'Interview Resources',
	link:'/resources/interview',
	image: interviewSvg.src
	},
]
// console.log(resourcesCategories[0].image);

---

<Layout title="My Personal Resources" >
	<main class="flex flex-col mx-auto w-full">		
		<h1 class="text-black text-5xl my-5 dark:text-white text-center">Welcome to my personal resources</h1>
		<p class="text-black text-xl mb-4 dark:text-white text-center">On this personal webpage, you'll find a curated selection of valuable resources that I've collected over time. These items have been carefully chosen for their informative and inspirational qualities. Feel free to explore and benefit from this collection, just as I have.</p>
		<ul class="grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] justify-center gap-3 w-full mx-auto max-sm:grid-cols-1">
			{resourcesCategories.map(category=>(
				<CategoryCard 
					name={category.name}
					link={category.link}
					image={category.image}
				/>
			
			
			))}
		</ul>
	</main>
</Layout>